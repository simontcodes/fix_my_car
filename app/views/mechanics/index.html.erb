<h2 class="title">All Mechanics</h2>

 <table class="table">
  <tbody>
     <tr>
       <th>
         Mechanic Name:
       </th>
       <th>
         Number of jobs assigned:
       </th>
       <th>
         Number of jobs completed:
       </th>

     </tr>

     <% @mechanics.each do |mechanic| %>
    <tr>
      <td>  <%= "#{mechanic.name}" %> </td>
      <td>  <%= mechanic.jobs.where.not(aasm_state: "completed").count  %> </td>
      <td>  <%= mechanic.jobs.completed.count %> </td>
    <% end %>
    </tr>

  </tbody>
 </table>

  <button><%= link_to 'Add a New Mechanic', new_mechanic_path, class: "link-button" %></button>

 <button> <%= link_to 'Back to main', root_path, class: "link-button" %> </button>
