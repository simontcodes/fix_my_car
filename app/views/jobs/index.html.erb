<h2 class="title">Open Jobs </h2>

 <table class="table">
   <tbody>
     <tr>
       <th>
         Job Name:
       </th>
       <th>
         Job Status:
       </th>
       <th>
         Model:
       </th>
       <th>
         Make:
       </th>
       <th>
         Plate:
       </th>
       <th>
         Job Start Date:
       </th>
       <th>
         Delete:
       </th>
     </tr>


     <% @jobs.each do |job| %>
     <% if job.aasm_state != 'completed' %>
         <tr>
           <td> <%= link_to "Repair for #{job.car.client.name}", job_path(id: job.token) %> </td>
           <td><%= job.aasm_state.capitalize %> </td>
           <td><%= job.car.model %> </td>
           <td><%= job.car.make %> </td>
           <td><%= job.car.plate %> </td>
           <td><%= job.created_at.strftime("%m-%d-%Y") %> </td>
           <td>  <%= link_to("Delete!", {:controller=>'jobs', :action=>'destroy', :id=>job.id}, {method: :delete}) %> </td>
         </tr>
       <% end %>
     <% end %>

   </tbody>
 </table>

 <button> <%= link_to 'Back to main', root_path, class: "link-button" %> </button>
