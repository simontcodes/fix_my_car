<%= form_for @client do |f| %>

<% if @client.errors.any? %>
<div class="error_messages">
  <h2>Form is invalid</h2>
    <h4>There are <%= pluralize(@client.errors.count, "errors") %> that prohibited you from creating a client.</h4>
  <ul>
    <% @client.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
</div>


<p> <%= f.label :name %> <%= f.text_field :name %> </p>
<p> <%= f.label :email %> <%= f.text_field :email %> </p>
<p> <%= f.label :phone %> <%= f.text_field :phone %> </p>
<p> <%= f.label :cedula %> <%= f.number_field :cedula %> </p>

<%= f.fields_for :cars do |cars_fields| %>
   <div class="field">
     <%= cars_fields.label :Make %>
     <%= cars_fields.text_field :make %>
   </div>

   <div class="field">
     <%= cars_fields.label :model %>
     <%= cars_fields.text_field :model %>
   </div>
   <div class="field">
     <%= cars_fields.label :year %>
     <%= cars_fields.date_select :year, discard_day:true, discard_month:true %>
   </div>
   <div class="field">
     <%= cars_fields.label :color %>
     <%= cars_fields.text_field :color %>
   </div>
   <div class="field">
     <%= cars_fields.label :plate %>
     <%= cars_fields.text_field :plate %>
   </div>
   <% end %>


<p> <%= f.submit %>
 <% end %>
